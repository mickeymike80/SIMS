@model SIMS_CW.Models.academic_years

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section title {
    Edit academic year
}

@section title_page {
    Edit academic year
}

<h3 class="headerw3" style="margin-bottom: 30px;">Edit Academic Year</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.academic_year_id)

        <div class="form-group">
