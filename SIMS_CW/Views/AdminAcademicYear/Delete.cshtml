@model SIMS_CW.Models.academic_years

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section title {
    Delete Academic Year
}

@section title_page {
    Delete Academic Year
}
<h3 class="headerw3" style="margin-bottom: 30px;">Delete Academic Year</h3>
<h3>Are you sure you want to delete this Academic Year?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Academic Year</dt>
        <dd>
            @Html.DisplayFor(model => model.academic_year_name)
        </dd>

        <dt>Started at</dt>
        <dd>
            @Html.DisplayFor(model => model.started_at)
        </dd>

        <dt>Ended at</dt>
        <dd>
            @Html.DisplayFor(model => model.ended_at)
        </dd>

        <dt>Ideas closure date</dt>
        <dd>
            @Html.DisplayFor(model => model.deadline_ideas)
        </dd>

        <dt>Comments closure date</dt>
        <dd>
            @Html.DisplayFor(model => model.deadline_comments)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
